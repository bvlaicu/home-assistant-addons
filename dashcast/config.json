{
  "name": "Dashcast",
  "version": "0.0.8",
  "slug": "dashcast",
  "description": "Display dashboard web pages on your Chromecast device",
  "url": "https://github.com/ragingcomputer/dashcast-docker-MQTT",
  "startup": "application",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "webui": "[PROTO:ssl]://[HOST]:[PORT:80]",
  "ingress": true,
  "ingress_port": 1337,
  "panel_icon": "mdi:chart-areaspline",
  "homeassistant": "0.92.0b2",
  "map": ["share:rw", "ssl"],
  "boot": "auto",
  "host_network": true,
  "environment": {
    "DISPLAY_NAME": "",
    "DEFAULT_DASHBOARD_URL": "",
    "DEFAULT_DASHBOARD_URL_FORCE": "False",
    "IGNORE_CEC": "True",
    "MQTT_SERVER": "",
    "MQTT_USERNAME": "",
    "MQTT_PASSWORD": ""
  },
  "options": {
    "log_level": "info",
    "chromecast_name": "Livingroom Chromecast",
    "dashboard_url": "https://news.google.com",
    "mqtt_host": "127.0.0.1", 
    "mqtt_user": "mqtt",
    "mqtt_pass": "yourmqttpassword"
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)",
    "chromecast_name": "str",
    "dashboard_url": "str", 
    "mqtt_host":"str",
    "mqtt_user":"str",
    "mqtt_pass":"str"
  },
  "ports": {
    "80/tcp": null,
    "80/tcp": 8880
  },
  "ports_description": {
    "80/tcp": "Web interface (Not required for Ingress)"
  },
  "hassio_api": true,
  "auth_api": true,
  "hassio_role": "default",
  "homeassistant_api": false
}
